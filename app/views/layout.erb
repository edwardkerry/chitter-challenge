<!DOCTYPE html>
<html>
  <head>
    <title>
      Chitter
    </title>
  </head>
  <body>
    <% if current_user %>
      <h1> <%= current_user.user_name%>'s Chitter!</h1>
    <% end %>
    <% if flash[:errors] && !flash[:errors].empty? %>
      Error in registration:
      <ul id='errors'>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>
    <%= yield %>
  </body>
</html>
